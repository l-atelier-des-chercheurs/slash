{
  "domain": "",
  "protocol": "https",
  "host": "localhost",
  "desired_port": 8080,
  "redirect_port": "",
  "cache_content": true,
  "bonjour_domain": false,
  "versioning": true,
  "tokenIsValidForXDays": 60,

  "contentPath": "slash_docs",

  "privateKeyPath": "",
  "certificatePath": "",
  "passphrase": "",

  "lruCacheMax": 10000,
  "lruCacheMaxSize": 25000000,

  "deletedFolderName": "_bin",

  "ffmpeg_options": {
    "priority": 0,
    "timeout": 600
  },

  "mediaThumbQuality": 90,

  "mailer": {
    "host": "",
    "port": "",
    "secure": false,
    "auth": {
      "user": "",
      "pass": ""
    },
    "from": ""
  },

  "schema": {
    "$cover": {
      "width": 2000,
      "height": 2000,
      "thumbs": {
        "resolutions": [50, 320, 640, 2000]
      }
    },
    "fields": {
      "name_of_instance": {
        "type": "string"
      },
      "presentation_of_instance": {
        "type": "string"
      },
      "contactmail_of_instance": {
        "type": "string"
      },
      "general_password": {
        "type": "string"
      },
      "signup_password": {
        "type": "string"
      },
      "enable_indexing": {
        "type": "boolean"
      },
      "remove_permanently": {
        "type": "boolean"
      },
      "upload_max_file_size_in_mo": {
        "type": "number"
      },
      "require_signup_to_contribute": {
        "type": "boolean"
      },
      "require_mail_to_signup": {
        "type": "boolean"
      },
      "enable_events": {
        "type": "boolean"
      },
      "enable_chats": {
        "type": "boolean"
      },
      "hero_background_color": {
        "type": "string"
      },
      "text_background_color": {
        "type": "string"
      },
      "text_image_layout": {
        "type": "string"
      },
      "favicon_image_name": {
        "type": "string"
      },
      "topbar_image_name": {
        "type": "string"
      },
      "hero_image_name": {
        "type": "string"
      },
      "spaces_pinned": {
        "type": "array"
      },
      "topics_pinned": {
        "type": "array"
      },
      "users_must_accept_terms_to_signup": {
        "type": "boolean"
      },
      "terms_in_footer": {
        "type": "boolean"
      },
      "confidentiality_in_footer": {
        "type": "boolean"
      }
    },
    "$files": {
      "thumbs": {
        "resolutions": [50, 320, 640, 2000]
      }
    },
    "$folders": {
      "folders": {
        "fields": {
          "title": {
            "type": "string",
            "required": true,
            "unique": true
          }
        },
        "$files": {
          "thumbs": {
            "resolutions": [50, 320, 640, 1600]
          },
          "fields": {
            "caption": {
              "type": "string"
            },
            "x": {
              "type": "number"
            },
            "y": {
              "type": "number"
            },
            "width": {
              "type": "number"
            },
            "height": {
              "type": "number"
            }
          }
        }
      },
      "authors": {
        "$can_be_created_by": "everyone",
        "$cover": {
          "width": 2000,
          "height": 2000,
          "thumbs": {
            "resolutions": [50, 320, 640, 2000]
          }
        },
        "fields": {
          "email": {
            "type": "string",
            "required": false,
            "unique": true
          },
          "name": {
            "type": "string",
            "required": true,
            "unique": true
          },
          "presentation": {
            "type": "string"
          },
          "group": {
            "type": "array"
          },
          "projects_recently_edited": {
            "type": "array"
          }
        },
        "$files": {
          "fields": {
            "chat_read_indexes": {
              "type": "object"
            }
          }
        }
      },
      "chats": {
        "fields": {
          "title": {
            "type": "string",
            "unique": true
          },
          "last_message_date": {
            "type": "string"
          },
          "last_message_count": {
            "type": "number"
          },
          "linked_file_path": {
            "type": "string"
          }
        },
        "$files": {
          "fields": {
            "content": {
              "type": "string"
            }
          }
        }
      },
      "fonts": {
        "fields": {
          "title": {
            "type": "string",
            "required": true,
            "unique": true
          },
          "font_files": {
            "type": "object"
          }
        },
        "$files": {}
      },
      "categories": {
        "fields": {
          "title": {
            "type": "string",
            "required": true,
            "unique": true
          },
          "tag_color": {
            "type": "string"
          },
          "list_of_suggestions": {
            "type": "array"
          }
        },
        "$files": {}
      }
    }
  }
}
